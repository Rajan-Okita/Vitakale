<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.VitaKale" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary Colors -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>

        <!-- Background Colors -->
        <item name="android:colorBackground">@color/background</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>

        <!-- Custom Widgets -->
        <item name="android:buttonStyle">@style/CustomButton</item>
        <item name="android:editTextStyle">@style/CustomEditText</item>
    </style>

    <!-- Custom Button Style -->
    <style name="CustomButton" parent="Widget.AppCompat.Button">
        <item name="android:backgroundTint">@color/primary</item>
        <item name="android:textColor">@color/text_on_primary</item>
    </style>

    <!-- Custom EditText Style -->
    <style name="CustomEditText" parent="Widget.AppCompat.EditText">
        <item name="android:backgroundTint">@color/accent</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textColorHint">@color/text_secondary</item> <!-- Corrected attribute -->
    </style>
</resources>
